= form_tag '/auth/identity/register' do
  %fieldset
    %legend Claim your account

    .clearfix
      = label_tag :name, 'Name'
      .input
        = text_field_tag :name, @user.name, class: 'input-text'

    .clearfix
      = label_tag :email, 'Email'
      .input
        = text_field_tag :email, @user.email, class: 'input-text'

    .clearfix
      = label_tag :password, 'Password'
      .input
        = password_field_tag :password, nil, class: 'input-password'

    .clearfix
      = label_tag :password_confirmation, 'Confirm password'
      .input
        = password_field_tag :password_confirmation, nil, class: 'input-password'

    .actions
      = submit_tag 'Sign up', class: 'btn btn-primary'
      = link_to 'Cancel', :back, class: 'btn'
